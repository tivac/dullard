{
  "name": "dullard",
  "version": "2.0.0",
  "description": "Let the computers do the boring stuff.",
  "usage": "dullard -d <dir>,...,<dirN> <step1> ... <stepN>",
  "bin": "./bin/cli.js",
  "main": "./lib/build.js",
  "scripts": {
    "commitmsg": "validate-commit-msg",
    "cover": "istanbul test --print both ./node_modules/mocha/bin/_mocha",
    "lint": "eslint .",
    "preview": "changes || true",
    "test": "mocha",
    "posttest": "npm run lint",
    "preversion": "npm test",
    "version": "changes",
    "postversion": "git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tivac/dullard.git"
  },
  "author": "Pat Cavit <pcavit@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tivac/dullard/issues"
  },
  "devDependencies": {
    "@studio/changes": "^1.1.0",
    "eslint": "^3.7.0",
    "eslint-config-arenanet": "^3.0.0",
    "husky": "^0.12.0",
    "istanbul": "^0.4.0",
    "mocha": "^3.0.0",
    "validate-commit-msg": "^2.8.2"
  },
  "dependencies": {
    "async": "^2.0.1",
    "glob": "^7.0.0",
    "humanize-duration": "^3.9.1",
    "lodash.assign": "^4.1.0",
    "lodash.mergewith": "^4.5.1",
    "lodash.omit": "^4.4.1",
    "npmlog": "^4.0.2",
    "optimist": "^0.6.1",
    "strip-json-comments": "^2.0.0",
    "uppity": "~0.1.1"
  },
  "eslintConfig": {
    "extends": "arenanet",
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "no-param-reassign": 0
    }
  }
}
