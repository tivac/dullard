{
  "name": "dullard",
  "version": "1.1.0",
  "description": "Let the computers do the boring stuff.",
  "usage": "dullard -d <dir>,...,<dirN> <step1> ... <stepN>",
  "bin": "./bin/cli.js",
  "main": "./lib/build.js",
  "scripts": {
    "test": "npm run lint && npm run jscs && npm run istanbul",
    "lint": "eslint .",
    "jscs": "jscs .",
    "istanbul": "istanbul test --print both ./node_modules/mocha/bin/_mocha",
    "mocha": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tivac/dullard.git"
  },
  "author": "Pat Cavit <pcavit@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tivac/dullard/issues"
  },
  "devDependencies": {
    "eslint": "^1.9.0",
    "eslint-config-arenanet": "^1.0.1",
    "istanbul": "^0.4.0",
    "jscs": "^2.5.1",
    "jscs-preset-arenanet": "^1.0.3",
    "mocha": "^2.1.0"
  },
  "dependencies": {
    "async": "^1.5.1",
    "glob": "^6.0.1",
    "humanize-duration": "^3.3.0",
    "lodash": "~4.0.0",
    "npmlog": "^2.0.0",
    "optimist": "^0.6.1",
    "strip-json-comments": "^2.0.0",
    "uppity": "~0.1.1"
  },
  "eslintConfig": {
    "extends": "arenanet",
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "no-param-reassign": 0
    }
  }
}
